{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "target": "ES6",
    "types": []
  },
  "include": ["src/*"]
}
